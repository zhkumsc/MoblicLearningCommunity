<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<servlet>
		<servlet-name>UserLogin</servlet-name>
		<servlet-class>com.mlcss.servlet.user.UserLogin</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserRegister</servlet-name>
		<servlet-class>com.mlcss.servlet.user.UserRegister</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>UserLogin</servlet-name>
		<url-pattern>/UserLogin</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserRegister</servlet-name>
		<url-pattern>/UserRegister</url-pattern>
	</servlet-mapping>
	
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>com.mlcss.servlet.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>CheckLoginFilter</filter-name>
		<filter-class>com.mlcss.servlet.filter.CheckLoginFilter</filter-class>
	</filter>


	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CheckLoginFilter</filter-name>
		<url-pattern>/service/*</url-pattern>
	</filter-mapping>

</web-app>
